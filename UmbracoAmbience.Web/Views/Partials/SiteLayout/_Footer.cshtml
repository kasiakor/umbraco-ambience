@inherits UmbracoViewPage
@using Umbraco.Web.Models

@{
    IEnumerable<RelatedLink> footerSocialList = Umbraco.AssignedContentItem.GetPropertyValue<IEnumerable<RelatedLink>>("footerSocialList");
}
<section id="footer" class="wrapper split style2">
    <div class="inner">
        <section>
            <header>
                <h3>@Umbraco.Field("footerTitle")</h3>
            </header>
            <p>@Umbraco.Field("footerContent")</p>
            @if (footerSocialList != null && footerSocialList.Count() > 0)
            {
                <ul class="icons">
                    @foreach (RelatedLink link in footerSocialList)
                    {
                        <li><a href="@link.Link" class="icon brands fa-@link.Caption" target="@(link.NewWindow ? "_blank" : null)"><span class="label">@link.Caption</span></a></li>
                    }
                </ul>
            }
        </section>
        <section>
            <form method="post" action="#">
                <div class="fields">
                    <div class="field half"><input type="text" name="name" id="name" placeholder="Name" /></div>
                    <div class="field half"><input type="email" name="email" id="email" placeholder="Email" /></div>
                    <div class="field"><textarea name="message" id="message" placeholder="Message" rows="4"></textarea></div>
                </div>
                <ul class="actions">
                    <li><input type="submit" value="Send Message" /></li>
                </ul>
            </form>
        </section>
    </div>
    <div class="copyright">
        <p>&copy; Untitled. All rights reserved. Lorem ipsum dolor sit amet nullam.</p>
    </div>
</section>