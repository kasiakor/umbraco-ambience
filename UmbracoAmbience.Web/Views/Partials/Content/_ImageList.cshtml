@inherits UmbracoViewPage
@using Umbraco.Web.Models

@{
    IEnumerable<IPublishedContent> images = Umbraco.AssignedContentItem.GetPropertyValue<IEnumerable<IPublishedContent>>("imageList");
}

@if (images != null && images.Count() > 0)
{
    <!-- Image -->
    <section>
        <h2>Gallery</h2>
        <h3>Examples</h3>
        <div class="box alt">
            <div class="row gtr-uniform">
                <div class="col-12"><span class="image fit"><img src="@images.First().Url" alt="" /></span></div>
                @foreach (IPublishedContent image in images.Skip(1))
                {
                    <div class="col-4"><span class="image fit"><img src="@image.Url" alt="" /></span></div>
                }
            </div>
        </div>
    </section>
}